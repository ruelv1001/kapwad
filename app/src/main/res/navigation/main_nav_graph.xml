<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ziacare.app.ui.main.fragment.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_wallet"
            app:destination="@id/navigation_wallet" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_groups"
            app:destination="@id/navigation_groups"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_wallet"
        android:name="com.ziacare.app.ui.main.fragment.WalletFragment"
        android:label=""
        tools:layout="@layout/fragment_wallet" >
        <action
            android:id="@+id/action_navigation_wallet_to_navigation_groups"
            app:destination="@id/navigation_groups" />
        <action
            android:id="@+id/action_navigation_wallet_to_navigation_bulletin"
            app:destination="@id/navigation_bulletin" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bulletin"
        android:name="com.ziacare.app.ui.main.fragment.BulletinFragment"
        android:label=""
        tools:layout="@layout/fragment_bulletin" >
        <action
            android:id="@+id/action_navigation_wallet_to_navigation_groups"
            app:destination="@id/navigation_groups" />
    </fragment>

    <fragment
        android:id="@+id/navigation_groups"
        android:name="com.ziacare.app.ui.main.fragment.GroupsFragment"
        android:label=""
        tools:layout="@layout/fragment_groups" >
        <action
            android:id="@+id/action_navigation_groups_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ziacare.app.ui.main.fragment.ProfileFragment"
        android:label=""
        tools:layout="@layout/fragment_settings" />

</navigation>