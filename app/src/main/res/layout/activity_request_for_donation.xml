<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:contentDescription="@string/go_back"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="@dimen/dimen_25"
            android:paddingEnd="@dimen/dimen_0"
            android:text="@string/lbl_request_for_donation"
            android:textAlignment="textStart"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_20" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_2"
            android:background="@color/light_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/myRequestsRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_my_requests"
                    android:textColor="@color/super_light_gray"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/myRequestsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_my_requests"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_16" />

                <View
                    android:id="@+id/myRequestsView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_edittext_normal"
                    android:backgroundTint="@color/color_primary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/allRequestsRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_all_requests"
                    android:textAlignment="center"
                    android:textColor="@color/super_light_gray"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/allRequestsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_all_requests"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_16"
                    android:visibility="gone" />

                <View
                    android:id="@+id/allRequestsView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_edittext_normal"
                    android:backgroundTint="@color/color_primary"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_weight="1" />

</LinearLayout>