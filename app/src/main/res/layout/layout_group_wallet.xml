<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/walletCardView"
    app:cardCornerRadius="@dimen/dimen_20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_270"
    android:layout_marginTop="@dimen/dimen_16"
    android:elevation="@dimen/dimen_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/bg_login" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pointsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pointsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/wallet_points_hint"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_36" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/wallet_pts_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/wallet_available_balance_text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

                <LinearLayout
                    android:id="@+id/sendLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:background="@drawable/bg_group_btn"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dimen_15"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_15"
                    android:paddingBottom="@dimen/dimen_10">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:src="@drawable/ic_group_send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_send_points"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/qrImageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="end"
                android:padding="@dimen/dimen_5"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_qr_code" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
