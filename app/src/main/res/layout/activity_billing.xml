<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.billing.activity.BillingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backImageView"
            android:contentDescription="@string/go_back"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:paddingStart="@dimen/dimen_25"
            android:paddingEnd="@dimen/dimen_0"
            tools:text="Billing B-0000001"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_22" />

        <ImageView
            android:id="@+id/scanQrImageView"
            android:contentDescription="@string/scan_billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_qr_code_scanner_24" />


    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/billingNavFragmentContainerView"
        android:layout_marginTop="?attr/actionBarSize"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/billing_nav_graph" />
</RelativeLayout>