<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLoaderBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_30"
    android:background="@android:color/transparent"
    android:padding="@dimen/dimen_16">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/color_primaryDark" />

    <TextView
        android:id="@+id/tvProgressDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/font_16"
        android:layout_toEndOf="@+id/progressBar1"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        />

</RelativeLayout>