<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_back_arrow"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dimen_4"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/referenceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_if_000001"
                android:textColor="@color/commons_lbl"
                android:textSize="@dimen/font_16"
                app:drawableEndCompat="@drawable/ic_copy" />
        </LinearLayout>

        <ImageView
            android:id="@+id/addImageView"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_10"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_add_member" />

        <ImageView
            android:id="@+id/settingsImageView"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_settings_group" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_270"
                android:layout_marginTop="@dimen/dimen_30"
                android:elevation="@dimen/dimen_0"
                app:cardCornerRadius="@dimen/dimen_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/bg_login" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen_25"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:layout_marginEnd="@dimen/dimen_25"
                        android:layout_marginBottom="@dimen/dimen_25"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dimen_10"
                                android:fontFamily="@font/inter_semibold"
                                android:text="@string/lbl_group_wallet"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_18" />

                            <ImageView
                                android:id="@+id/notesImageView"
                                android:layout_width="@dimen/dimen_30"
                                android:layout_height="@dimen/dimen_30"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:padding="@dimen/dimen_5"
                                android:src="@drawable/ic_notes" />

                            <ImageView
                                android:id="@+id/qrImageView"
                                android:layout_width="@dimen/dimen_30"
                                android:layout_height="@dimen/dimen_30"
                                android:padding="@dimen/dimen_5"
                                android:src="@drawable/ic_qr_code" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pointsLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:layout_marginBottom="@dimen/dimen_20"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pointsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:fontFamily="@font/inter_bold"
                                android:text="@string/wallet_points_hint"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_36" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/wallet_pts_text"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/wallet_available_balance_text"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/sendLinearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_5"
                                android:background="@drawable/bg_group_btn"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_15"
                                android:paddingBottom="@dimen/dimen_10">

                                <ImageView
                                    android:layout_width="@dimen/dimen_20"
                                    android:layout_marginEnd="@dimen/dimen_5"
                                    android:layout_height="@dimen/dimen_20"
                                    android:src="@drawable/ic_group_send" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="@string/lbl_send_points"
                                    android:textColor="@color/white" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/scan2PayLinearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_5"
                                android:background="@drawable/bg_group_btn"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_15"
                                android:paddingBottom="@dimen/dimen_10">

                                <ImageView
                                    android:layout_width="@dimen/dimen_20"
                                    android:layout_marginEnd="@dimen/dimen_5"
                                    android:layout_height="@dimen/dimen_20"
                                    android:padding="@dimen/dimen_2"
                                    android:src="@drawable/ic_qr_code" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="@string/lbl_scan_2_pay"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/membersLinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/color_accent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/membersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_0"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/font_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_members"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/font_10" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/light_blue"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/adminTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_0"
                        android:textColor="@color/bg_blue_text"
                        android:textSize="@dimen/font_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_co_admin"
                        android:textColor="@color/bg_blue_text"
                        android:textSize="@dimen/font_10" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10" />

                <LinearLayout
                    android:id="@+id/assistanceRequestsLinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/bg_red"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/assistanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_assistance_n_requests"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dimen_10"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/lbl_recent_activity"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/viewAllTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_10"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/lbl_view_all"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activityRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_50"
                tools:itemCount="3"
                tools:listitem="@layout/adapter_notifications" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>