<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lionscare.app.utils.facedetect.facedetectionutil.common.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lionscare.app.utils.facedetect.facedetectionutil.common.GraphicOverlay
            android:id="@+id/barcodeOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.lionscare.app.utils.facedetect.facedetectionutil.common.CameraSourcePreview>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/follow_the_instruction_to_enable_capture_button"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/textTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="--"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/captureRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55000000"
        android:padding="@dimen/dimen_10"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/captureButton"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_centerInParent="true"
            android:background="@drawable/capture_button_effect"
            android:enabled="false" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>