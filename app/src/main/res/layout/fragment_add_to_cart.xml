<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:id="@+id/prductImageView"
        android:background="@drawable/bg_order_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            android:id="@+id/productImageView"
            android:padding="@dimen/dimen_10"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cart_gray"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEVAST"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/font_22"/>

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:layout_height="wrap_content"
                android:text=" 1000.00"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/font_22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glyphosate IPA)"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/font_16"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:layout_height="wrap_content"
                android:text=" Base price"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>





    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:id="@+id/subtractImageView"
                android:background="@drawable/bg_circle_menu_green"
                android:src="@drawable/minus_icon"
                />
            <TextView
                android:id="@+id/countTextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginRight="@dimen/dimen_30"
                android:textSize="@dimen/font_22"/>
            <ImageView
                android:layout_width="@dimen/dimen_30"
                android:id="@+id/addImageView"
                android:layout_height="@dimen/dimen_30"
                android:background="@drawable/bg_circle_menu_green"
                android:src="@drawable/add_icon"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50"
            android:background="@drawable/bg_rounded_crops"
            android:fontFamily="@font/inter_medium"
            android:padding="@dimen/dimen_13"
            android:text="Add to Basket â€“1000.00"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>
</LinearLayout>