<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_first_name"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:hint="@string/lbl_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/commons_text_hint"
                    android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_middle_name"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/middleNameTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/middleNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:hint="@string/lbl_middle_name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/commons_text_hint"
                    android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_last_name"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:hint="@string/lbl_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/commons_text_hint"
                    android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_contact_number"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contactTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:prefixText="+63"
                app:prefixTextColor="@color/commons_lbl_highlight"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="false"
                app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_selector"
                        android:fontFamily="@font/inter_semibold"
                        android:hint="@string/lbl_9xx_xxx_xxxx"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
