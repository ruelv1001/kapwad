                        android:textColor="@color/black"
                        android:textColorHint="@color/commons_text_hint"
                        android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/countryCodeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:background="?selectableItemBackgroundBorderless"
                    android:drawablePadding="@dimen/dimen_4"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="+63"
                    android:textColor="@color/black"
                    app:drawableEndCompat="@drawable/ic_arrow_down"
                    app:drawableTint="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:id="@+id/contactTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    app:boxBackgroundColor="@color/white"
                    app:hintAnimationEnabled="true"
                    app:expandedHintEnabled="false"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contactEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:background="@drawable/bg_edittext_selector"
                        android:hint="@string/lbl_9xx_xxx_xxxx"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_nominate_password"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:hint="@string/lbl_nominate_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/commons_text_hint"
                    android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_confirm_password"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordTextInputLayout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_80"
                android:fontFamily="@font/inter_regular"
                app:boxBackgroundColor="@color/white"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_selector"
                    android:fontFamily="@font/inter_semibold"
                    android:hint="@string/lbl_confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/commons_text_hint"
                    android:textSize="@dimen/font_14" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_15"
            android:background="@drawable/bg_shadow_top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueButton"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:fontFamily="@font/inter_semibold"
                android:paddingTop="@dimen/dimen_15"
                android:paddingBottom="@dimen/dimen_15"
                android:text="@string/lbl_continue"
                android:textAllCaps="false"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>