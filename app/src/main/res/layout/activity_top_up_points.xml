<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cash_in_title"
            android:textSize="@dimen/font_20"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/text_color"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/request_posted_amount_text"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_16" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pointsTextInputLayout"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:fontFamily="@font/inter_regular"
            app:boxBackgroundColor="@color/white"
            app:hintAnimationEnabled="true"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pointsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_selector"
                android:fontFamily="@font/inter_semibold"
                android:hint="@string/lbl_0"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/commons_text_hint"
                android:textSize="@dimen/font_14" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/h1Button"
                style="@style/MyButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_h1_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/h2Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/top_up_h2_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/h5Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_h5_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/k1Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_k1_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/k2Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_k2_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/k5Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_k5_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MyButtonOutlinedStyle"
                android:id="@+id/k10Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/top_up_k10_text"
                android:textAlignment="center"
                android:layout_weight="4"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        style="@style/MyButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:fontFamily="@font/inter_semibold"
        android:paddingTop="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_15"
        android:text="@string/lbl_continue"
        android:textAllCaps="false"
        android:textSize="@dimen/font_14" />

</LinearLayout>