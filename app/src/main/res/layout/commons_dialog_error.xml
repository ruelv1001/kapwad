<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg_dialog_loading"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_12">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_8"
            android:src="@drawable/ic_common_error" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:gravity="center"
            android:maxWidth="@dimen/dimen_180"
            android:text="@string/commons_error_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:gravity="center"
            android:maxWidth="@dimen/dimen_180"
            android:text="@string/commons_error_message"
            android:textColor="@color/commons_text_hint"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

</FrameLayout>
