<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crops_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_150"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_circle_menu_white"
                android:layout_marginTop="@dimen/dimen_150"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_bold"
                android:text="GEO-TAGGING STATUS"
                android:textColor="@color/black"
                android:textSize="@dimen/font_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/inter_medium"
                android:text=" NOT VERIFIED"
                android:textColor="@color/red"
                android:textSize="@dimen/font_14" />

        <TextView
            android:layout_width="@dimen/dimen_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_100"
            android:id="@+id/nextTextView"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/bg_rounded_crops"
            android:text="@string/verify_now"
            android:textAlignment="center"
            android:padding="@dimen/dimen_13"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />


    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>