<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qrCardView"
    app:cardCornerRadius="@dimen/dimen_20"
    android:layout_width="wrap_content"
    android:maxWidth="410dp"
    android:layout_height="@dimen/dimen_270"
    android:layout_marginTop="@dimen/dimen_16"
    android:layout_gravity="center_horizontal"
    android:elevation="@dimen/dimen_0">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:maxWidth="410dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/bg_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_16"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/walletImageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dimen_20"
                android:src="@drawable/ic_wallet"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/qrImageView"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_150"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_16" />

            <TextView
                android:id="@+id/idNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                app:drawableEndCompat="@drawable/ic_copy"
                app:drawableTint="@color/white"
                tools:text="LCG - 101012323" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
