<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_20"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginVertical="@dimen/dimen_10"
                android:id="@+id/searchLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchTextInputLayout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_55"
                    android:fontFamily="@font/inter_regular"
                    android:hint="@string/lbl_search"
                    app:boxBackgroundColor="@color/light_gray_line"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="@dimen/dimen_10"
                        android:fontFamily="@font/inter_medium"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/applyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/search_user_apply_btn"
                    android:textSize="@dimen/font_14"
                    android:visibility="gone"
                    android:textColor="@color/color_primary"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:paddingHorizontal="@dimen/dimen_16"
                    android:gravity="center" />

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                    <include layout="@layout/item_shimmer_content" />
                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/membersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/placeHolderTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/lbl_nothing_to_show_txt"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/font_14"
                android:visibility="gone" />
        </LinearLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/noteSendRequestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/font_14"
        android:textStyle="italic"
        android:layout_marginVertical="@dimen/dimen_6"
        tools:text="Note: This Billing Statement B-000004 will be available in their Asked for Donations Bulletin Board" />

    <Button
        android:id="@+id/sendRequestButton"
        style="@style/MyButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_8"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/send_request"
        android:textAllCaps="false"
        android:textSize="@dimen/font_14"
        />
</LinearLayout>

