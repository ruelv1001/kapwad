<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crops_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_70"
                android:layout_marginTop="@dimen/dimen_150"
                android:src="@drawable/plant_icon" />

            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_bold"
                android:text="@string/snaps"
                android:textColor="@color/color_primaryDark"
                android:textSize="@dimen/font_36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/inter_medium"
                android:text="@string/capture_mom"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

        <TextView
            android:layout_width="@dimen/dimen_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_100"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/bg_rounded_crops"
            android:text="@string/next"
            android:textAlignment="center"
            android:padding="@dimen/dimen_13"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
        <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_70"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semibold"
            android:paddingTop="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_15"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>