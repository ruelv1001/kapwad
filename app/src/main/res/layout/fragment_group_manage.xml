<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_sample_malasakit" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center"
                android:src="@drawable/ic_photo_camera_black_48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dimen_6"
                android:background="@drawable/bg_circle"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/referenceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="3"
                    android:text="@string/lbl_if_000001"
                    android:textSize="@dimen/font_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/lbl_malasakit_family"
                        android:textAlignment="center"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_16" />


                    <ImageView
                        android:id="@+id/editGroupImageView"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/color_accent"
                        app:tint="@color/color_primary" />


                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/typeFamTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="@color/color_primary"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_5"
                        android:text="@string/lbl_immediate_family"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/typeOrgTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="@color/light_purple"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_5"
                        android:text="@string/lbl_organization"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/typeComTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@drawable/bg_round"
                        android:backgroundTint="@color/blue_text"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_5"
                        android:text="@string/lbl_community"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/light_gray_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/inter_bold"
            android:text="@string/lbl_management"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:id="@+id/notifLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/bg_group_btn"
                android:backgroundTint="@color/light_gray_line"
                android:backgroundTintMode="screen"
                android:padding="@dimen/dimen_15"
                android:src="@drawable/baseline_notifications_none_24"
                app:tint="@color/super_light_gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_notifications"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_16" />

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward_arrow" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/assistanceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/ic_assistance" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_assistance"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_16" />

            <RelativeLayout
                android:id="@+id/assistanceNotifRelativeLayout"
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/red" />

                <TextView
                    android:id="@+id/assistanceCountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/lbl_1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/membershipLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/ic_membership" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/lbl_membership"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/membersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:text="@string/lbl__10_members"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/membershipNotifRelativeLayout"
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/red" />

                <TextView
                    android:id="@+id/membershipCountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/lbl_1"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/statisticsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/ic_statistics" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_statistics"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/transactionLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/ic_transact_history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_transaction_history"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dimen_16"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/leaveGroupLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/lighter_red"
                android:src="@drawable/ic_leave"
                android:padding="@dimen/dimen_14"
                android:paddingEnd="@dimen/dimen_10"
                app:tint="@color/strong_red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_leave_group"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_16" />


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>