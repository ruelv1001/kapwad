<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_500"
    android:layout_margin="@dimen/dimen_20"
    android:background="@drawable/img_bg_virtual_id"
    android:orientation="vertical"
    android:id="@+id/virtualIdLinearLayout"
    android:padding="@dimen/dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myMainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:src="@drawable/ic_main_layout" />

        <ImageView
            android:id="@+id/myQrImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qr" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:rotation="90">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:src="@drawable/logo_lion_club" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_id_no_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/idNoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/home_id_no_hint"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_22" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_name_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_name_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_address_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_address_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/home_date_issued_text"
                            android:textColor="@color/commons_lbl"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/dateIssuedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/home_date_issued_hint"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/home_date_of_birth_text"
                            android:textColor="@color/commons_lbl"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/dateOfBirthTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/home_date_of_birth_hint"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_20"
                android:rotation="90">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/badgeImageView"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle"
                    android:padding="@dimen/dimen_6"
                    android:src="@drawable/ic_thumbs_up" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/qrImageView"
                android:layout_width="@dimen/dimen_130"
                android:layout_height="@dimen/dimen_130"
                android:layout_marginTop="@dimen/dimen_50"
                android:rotation="90"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:src="@drawable/ic_qr" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>