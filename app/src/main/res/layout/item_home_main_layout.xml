<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/mainLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/bg_rounded_outline"
        android:minHeight="@dimen/dimen_530"
        android:minWidth="@dimen/dimen_350"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myIdImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16"
                android:src="@drawable/ic_card" />

            <ImageView
                android:id="@+id/myQrImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qr" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/badgeImageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/dimen_6"
                android:src="@drawable/ic_verified" />

        </RelativeLayout>


        <TextView
            android:id="@+id/badgeIdStatus"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_influencer"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/dimen_4"
            android:paddingStart="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_5"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:text="@string/account_type_influencer_text"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/home_id_no_text"
                android:textColor="@color/commons_lbl"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/idNoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:fontFamily="@font/inter_bold"
                android:text="@string/loading"
                android:textColor="@color/green"
                android:textSize="@dimen/font_22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/inter_regular"
                android:text="@string/home_name_text"
                android:textColor="@color/commons_lbl"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:fontFamily="@font/inter_semibold"
                android:hint="@string/loading"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/inter_regular"
                android:text="@string/home_address_text"
                android:textColor="@color/commons_lbl"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/n_a"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/home_date_issued_text"
                        android:textColor="@color/commons_lbl"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/dateIssuedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/loading"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/home_date_of_birth_text"
                        android:textColor="@color/commons_lbl"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/dateOfBirthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/home_date_of_birth_hint"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_16" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

<!--        initial request badge butto-->
        <LinearLayout
            android:id="@+id/requestVerifiedBadgeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/color_accent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dimen_12"
            android:paddingVertical="@dimen/dimen_18">

            <ImageView
                android:id="@+id/requestVerifiedBadgeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10"
                android:src="@drawable/ic_request_badge" />

            <LinearLayout
                android:id="@+id/textHolderLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/requestVerifiedBadgeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_membership_card_text"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/dateRequestVerifiedBadgeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_membership_card_text"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_12"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

<!--        for status button-->
    <include
        android:layout_marginTop="@dimen/dimen_16"
        android:id="@+id/includeBadgeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/adapter_account_type"/>
    </LinearLayout>
</LinearLayout>