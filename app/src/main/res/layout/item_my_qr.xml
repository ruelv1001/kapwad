<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qrLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_20"
    android:minHeight="@dimen/dimen_500"
    android:background="@drawable/bg_rounded_outline"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myIdImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:src="@drawable/ic_card" />

        <ImageView
            android:id="@+id/myMainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_layout" />

    </LinearLayout>

    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="@dimen/dimen_350"
        android:layout_height="@dimen/dimen_350"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_16"
        android:src="@drawable/ic_qr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_16"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qrCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/home_id_no_hint"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_20"
            android:drawableEnd="@drawable/ic_copy"/>

    </LinearLayout>


</LinearLayout>