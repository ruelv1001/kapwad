<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_30"
    android:layout_marginTop="@dimen/dimen_20"
    android:layout_marginEnd="@dimen/dimen_30"
    android:background="@drawable/bg_rounded_card">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/approveLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_card"
        android:backgroundTint="@color/gray"
        android:orientation="vertical"
        android:padding="@dimen/dimen_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginStart="@dimen/dimen_10"
                android:layout_weight="1"
                android:text="@string/report"
                android:textAlignment="center"
                android:textColor="@color/black2"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeImageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignTop="@id/approveLinearLayout"
                android:layout_alignEnd="@id/approveLinearLayout"
                android:clickable="true"
                android:padding="@dimen/dimen_5"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/objective_medium"
                android:text="@string/location" />

            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:digits="aabcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                android:elevation="@dimen/dimen_1"
                android:enabled="false"
                android:fontFamily="@font/objective_regular"
                android:inputType="text"
                android:padding="@dimen/default_dimen"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/objective_medium"
                android:text="@string/complainant_name" />

            <EditText
                android:id="@+id/complainantEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:digits="aabcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                android:elevation="@dimen/dimen_1"
                android:fontFamily="@font/objective_regular"
                android:inputType="text"
                android:padding="@dimen/default_dimen"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_13" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/complainantErrorTextView"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:fontFamily="@font/objective_medium"
                android:textColor="@color/red_label"
                android:visibility="gone"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/retailerLabelTextView"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/objective_medium"
                android:text="@string/retailer" />

            <EditText
                android:id="@+id/retailerEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:elevation="@dimen/dimen_1"
                android:fontFamily="@font/objective_regular"
                android:inputType="text"
                android:padding="@dimen/default_dimen"
                android:singleLine="true"
                android:textSize="@dimen/font_13" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/retailerErrorTextView"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:fontFamily="@font/objective_medium"
                android:textColor="@color/red_label"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/font_13"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/objective_medium"
                android:text="@string/type_of_stamp" />

            <EditText
                android:id="@+id/typeEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:digits="aabcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                android:elevation="@dimen/dimen_1"
                android:fontFamily="@font/objective_regular"
                android:inputType="text"
                android:clickable="true"
                android:focusable="false"
                android:singleLine="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:padding="@dimen/default_dimen"
                android:textSize="@dimen/font_13" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/stampErrorTextView"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:fontFamily="@font/objective_medium"
                android:textColor="@color/red_label"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:fontFamily="@font/objective_medium"
                android:text="@string/upload_photo" />
            <EditText
                android:id="@+id/uploadEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:clickable="true"
                android:drawableRight="@drawable/ic_camera_blue"
                android:elevation="@dimen/dimen_1"
                android:hint="@string/upload_photo"
                android:inputType="text"
                android:padding="@dimen/default_dimen"
                android:editable="false"
                android:singleLine="true"
                android:textSize="@dimen/font_13"
                android:focusable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/objective_medium"
                android:text="@string/remrk" />

            <EditText
                android:id="@+id/remarksEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/default_dimen"
                android:background="@drawable/bg_ripple_white_corner"
                android:elevation="@dimen/dimen_1"
                android:hint="@string/remarks"
                android:inputType="text"
                android:padding="@dimen/default_dimen"
                android:textSize="@dimen/font_13" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/remarksErrorTextView"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:fontFamily="@font/objective_medium"
                android:textColor="@color/red_label"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/reportTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_ripple_rounder"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:padding="@dimen/dimen_10"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@drawable/bg_rectable_white_corner"
                android:elevation="@dimen/dimen_3"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_5"
                android:text="@string/action_cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>