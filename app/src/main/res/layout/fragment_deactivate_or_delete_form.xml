<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_20"
        android:paddingVertical="@dimen/dimen_26">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/why_are_you_leaving_agricare"
            android:textSize="@dimen/font_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_24"
            android:fontFamily="@font/inter_regular"
            android:text="@string/leaving_agricare_info"
            android:textSize="@dimen/font_16" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/leavingTemporarilyCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_4"
                app:cardCornerRadius="@dimen/dimen_10"
                app:contentPaddingBottom="@dimen/dimen_6"
                app:contentPaddingLeft="@dimen/dimen_16"
                app:contentPaddingTop="@dimen/dimen_6"
                app:strokeColor="@color/line"
                app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/i_m_leaving_temporarily"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/leavingTemporarilyRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/safetyPrivacyConcernsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_4"
            app:cardCornerRadius="@dimen/dimen_10"
            app:contentPaddingBottom="@dimen/dimen_6"
            app:contentPaddingLeft="@dimen/dimen_16"
            app:contentPaddingTop="@dimen/dimen_6"
            app:strokeColor="@color/line"
            app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/safety_privacy_or_concerns"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/safetyPrivacyConcernsRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/troubleGettingStartedCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_4"
                app:cardCornerRadius="@dimen/dimen_10"
                app:contentPaddingBottom="@dimen/dimen_6"
                app:contentPaddingLeft="@dimen/dimen_16"
                app:contentPaddingTop="@dimen/dimen_6"
                app:strokeColor="@color/line"
                app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/trouble_getting_started"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/troubleGettingStartedRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/multipleAccountsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_4"
                app:cardCornerRadius="@dimen/dimen_10"
                app:contentPaddingBottom="@dimen/dimen_6"
                app:contentPaddingLeft="@dimen/dimen_16"
                app:contentPaddingTop="@dimen/dimen_6"
                app:strokeColor="@color/line"
                app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/i_have_multiple_accounts"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/multipleAccountsRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/unableToTransactCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_4"
                app:cardCornerRadius="@dimen/dimen_10"
                app:contentPaddingBottom="@dimen/dimen_6"
                app:contentPaddingLeft="@dimen/dimen_16"
                app:contentPaddingTop="@dimen/dimen_6"
                app:strokeColor="@color/line"
                app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/unable_to_make_transactions"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/unableToTransactRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/anotherReasonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_4"
                app:cardCornerRadius="@dimen/dimen_10"
                app:contentPaddingBottom="@dimen/dimen_6"
                app:contentPaddingLeft="@dimen/dimen_16"
                app:contentPaddingTop="@dimen/dimen_6"
                app:strokeColor="@color/line"
                app:strokeWidth="@dimen/dimen_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/another_reason"
                        android:textSize="@dimen/font_16" />

                    <CheckBox
                        android:id="@+id/anotherReasonRadio"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

<!--        if another reason, visible-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reasonTextInputLayout"
            android:visibility="gone"
            app:boxBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconTint="@color/text_input_drawable_tint"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reasonEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/outline_note_24"
                android:drawablePadding="@dimen/dimen_12"
                android:drawableTint="@color/text_input_drawable_tint"
                android:hint="@string/state_your_reason"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        style="@style/MyButtonStyle"
        android:layout_margin="@dimen/dimen_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:fontFamily="@font/inter_semibold"
        android:paddingVertical="@dimen/dimen_16"
        android:text="@string/lbl_continue"
        android:textAllCaps="false" />
</LinearLayout>