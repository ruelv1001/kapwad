<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountTypeLinearLayout"
    android:layout_marginHorizontal="@dimen/dimen_16"
    android:gravity="center_vertical"
    android:background="@drawable/bg_outline_selector"
    android:paddingStart="@dimen/dimen_16"
    android:layout_marginTop="@dimen/dimen_10"
    android:paddingVertical="@dimen/dimen_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/accountTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10"
        android:src="@drawable/ic_thumbs_up"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/accountTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/font_16"
            tools:text="@string/account_type_influencer_text" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:text="@string/account_type_influencer_text" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/accountTypeRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_primary"
        android:enabled="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/badgeIdStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/bg_rounded_pending"
        android:fontFamily="@font/inter_regular"
        android:paddingStart="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_5"
        android:paddingEnd="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_5"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12"
        android:visibility="gone" />


</LinearLayout>