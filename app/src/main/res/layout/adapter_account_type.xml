<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountTypeLinearLayout"
    android:layout_marginHorizontal="@dimen/dimen_16"
    android:gravity="center_vertical"
    android:background="@drawable/bg_outline_selector"
    android:paddingStart="@dimen/dimen_16"
    android:layout_marginTop="@dimen/dimen_10"
    android:paddingVertical="@dimen/dimen_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/accountTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10"
        android:src="@drawable/ic_thumbs_up"/>

    <TextView
        android:id="@+id/accountTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_weight="1"
        tools:text="@string/account_type_influencer_text" />

    <RadioButton
        android:id="@+id/accountTypeRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_primary"
        android:enabled="false"/>

</LinearLayout>