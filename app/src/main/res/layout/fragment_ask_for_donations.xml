<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_8"
        android:paddingVertical="@dimen/dimen_16"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/shareToPublicCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_primary"
            android:checked="false"
            android:fontFamily="@font/inter_medium"
            android:text="@string/share_this_billing_statement_to_public_bulletin"
            android:textSize="@dimen/font_16" />

        <!--    group request-->
        <LinearLayout
            android:id="@+id/askInGroupRequestLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/bg_rounded"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12">

            <ImageView
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:contentDescription="@string/lbl_group_search"
                android:src="@drawable/ic_groups" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="@string/group_request"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_20" />

            <ImageView
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:contentDescription="@string/lbl_group_search"
                android:src="@drawable/ic_forward_arrow" />
        </LinearLayout>

        <!--    custom request-->
        <LinearLayout
            android:id="@+id/askInCustomRequestLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/bg_rounded"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12">

            <ImageView
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:contentDescription="@string/lbl_group_search"
                android:src="@drawable/baseline_person_24"
                app:tint="@color/icon_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="@string/custom_request"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_20" />

            <ImageView
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:contentDescription="@string/lbl_group_search"
                android:src="@drawable/ic_forward_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/listOfGroupRequestLinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_accent_card"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_32"
                android:paddingVertical="@dimen/dimen_24">

                <ImageView
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="@dimen/dimen_48"
                    android:contentDescription="@string/lbl_group_search"
                    android:src="@drawable/ic_groups"
                    app:tint="@color/icon_black" />

                <TextView
                    android:id="@+id/numberOfGroupsRequestedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_20"
                    tools:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/menu_groups_title"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listOfPeopleCustomRequestLinearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_accent_card"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_32"
                android:paddingVertical="@dimen/dimen_24">

                <ImageView
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="@dimen/dimen_48"
                    android:contentDescription="@string/lbl_group_search"
                    android:src="@drawable/baseline_person_24"
                    app:tint="@color/icon_black" />

                <TextView
                    android:id="@+id/numberOfCustomPeopleRequestedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_20"
                    tools:text="6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/request_points_people_lbl"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/continueButton"
        style="@style/MyButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_8"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/lbl_continue"
        android:textAllCaps="false"
        android:textSize="@dimen/font_14"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
