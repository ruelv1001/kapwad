<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_20"
        android:paddingVertical="@dimen/dimen_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/deactivate_or_permanent_delete"
            android:textSize="@dimen/font_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="@string/deactivate_or_delete_warning"
            android:textSize="@dimen/font_16"/>


<!--        DEATIVATE ACCOUNT-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deactivateAccountCardView"
            android:layout_marginTop="@dimen/dimen_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_4"
            app:strokeWidth="1dp"
            app:strokeColor="@color/line"
            app:cardCornerRadius="10dp"
            app:contentPadding="@dimen/dimen_16"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/deactivate_account"
                    android:textSize="@dimen/font_18"
                    app:drawableEndCompat="@drawable/ic_forward_arrow"
                    app:drawableTint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="@string/deactivate_account_info"
                    android:textSize="@dimen/font_16"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

<!--        DELETE ACCOUNT PERMANENTLY-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deleteAccountPermanentlyCardView"
            android:layout_marginVertical="@dimen/dimen_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_4"
            app:strokeWidth="1dp"
            app:strokeColor="@color/line"
            app:cardCornerRadius="10dp"
            app:contentPadding="@dimen/dimen_16"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/delete_account_permanently"
                    android:textSize="@dimen/font_18"
                    app:drawableEndCompat="@drawable/ic_forward_arrow"
                    app:drawableTint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="@string/delete_account_info"
                    android:textSize="@dimen/font_16"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
