<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_150"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_circle_menu_white"
                android:layout_marginTop="@dimen/dimen_150"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/inter_bold"
                android:text="GEO-TAGGING STATUS"
                android:textColor="@color/black"
                android:textSize="@dimen/font_26" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/statusTextView"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/inter_medium"
                android:textAllCaps="true"
                android:text=" NOT Verified"
                android:padding="@dimen/dimen_10"
                android:background="@drawable/bg_rounded"
                android:textColor="@color/red"
                android:textSize="@dimen/font_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/nextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_100"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@drawable/bg_rounded_crops"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/dimen_13"
                android:text="@string/next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />

        </RelativeLayout>


    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>