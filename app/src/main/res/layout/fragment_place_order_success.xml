<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



<ImageView
    android:layout_width="@dimen/dimen_500"
    android:layout_height="@dimen/dimen_200"
    android:src="@drawable/ic_check_green"/>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Thankyouforyourorder!"
                android:textAlignment="center"
                android:textColor="@color/color_primaryDark"
                android:textSize="@dimen/font_22" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/we_llnotifyyouonceit_sshipped"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/referenceTextView"
            android:fontFamily="@font/inter_medium"
            android:text=" Reference No: R-214124235-E"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_15"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_marginRight="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_100"
                android:id="@+id/doneTextView"
                android:fontFamily="@font/inter_medium"
                android:background="@drawable/bg_rounded_crops"
                android:text="@string/done"
                android:textAlignment="center"
                android:padding="@dimen/dimen_13"
                android:textColor="@color/white"

                android:textSize="@dimen/font_18" />
        </LinearLayout>





</LinearLayout>