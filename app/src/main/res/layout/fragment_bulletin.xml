<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_20"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="@string/menu_bulletin_title"
                android:textAlignment="textStart"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_20" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_2"
            android:background="@color/light_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/publicRequestsRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_public_requests"
                    android:textColor="@color/super_light_gray"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/publicRequestsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_public_requests"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_16" />

                <View
                    android:id="@+id/publicRequestsView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_edittext_normal"
                    android:backgroundTint="@color/color_primary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/askedForDonationsRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_asked_for_donations"
                    android:textAlignment="center"
                    android:textColor="@color/super_light_gray"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/askedForDonationsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/lbl_asked_for_donations"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_16"
                    android:visibility="gone" />

                <View
                    android:id="@+id/askedForDonationsView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_edittext_normal"
                    android:backgroundTint="@color/color_primary"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/viewAllTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_marginVertical="@dimen/dimen_20"
        android:text="@string/view_all"
        android:layout_gravity="center"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/font_16"/>

</LinearLayout>