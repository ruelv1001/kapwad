<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_gravity="center"
                android:src="@drawable/logo_lion_club" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_20"
            android:background="@drawable/bg_rounded_outline"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/myIdImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:src="@drawable/ic_card" />

                <ImageView
                    android:id="@+id/myQrImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qr" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_profile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/badgeImageView"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_thumbs_up"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dimen_6"
                    android:background="@drawable/bg_circle"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_id_no_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/idNoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/home_id_no_hint"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_22" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_name_text"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_name_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_address_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_address_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/home_date_issued_text"
                            android:textColor="@color/commons_lbl"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/dateIssuedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/home_date_issued_hint"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/home_date_of_birth_text"
                            android:textColor="@color/commons_lbl"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/dateOfBirthTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/home_date_of_birth_hint"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/font_16" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/requestVerifiedBadgeButton"
                style="@style/MyButtonIconStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:backgroundTint="@color/color_accent"
                android:fontFamily="@font/inter_semibold"
                android:paddingTop="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_16"
                android:text="@string/home_membership_card_text"
                android:textAllCaps="false"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_16"
                app:icon="@drawable/ic_badge"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/dimen_6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:padding="@dimen/dimen_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/menu_groups_title"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/numberOfNotifTextView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/lbl_2"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/red"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:padding="@dimen/dimen_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/home_immediate_family_group_text"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/immediateFamilyGroupRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"/>


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>