<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/logo_lion_club"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/font_20"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/text_color"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_outline"
        android:layout_margin="@dimen/dimen_20">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_profile"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_name_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/home_name_hint"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_address_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_address_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/home_date_of_birth_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/dateOfBirthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_date_of_birth_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_id_no_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/idNoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_id_no_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_date_issued_text"
                    android:textColor="@color/commons_lbl"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/dateIssuedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/home_date_issued_hint"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/membershipCardButton"
            style="@style/MyButtonIconStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_accent"
            android:fontFamily="@font/inter_semibold"
            android:letterSpacing="0"
            android:layout_marginTop="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            app:icon="@drawable/ic_card"
            app:iconPadding="@dimen/dimen_6"
            app:iconGravity="textStart"
            android:text="@string/home_membership_card_text"
            android:textAllCaps="false"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

</LinearLayout>